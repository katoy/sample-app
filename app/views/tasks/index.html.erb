<p id="notice"><%= notice %></p>

<%= javascript_pack_tag 'tasks/index' %>
<!-- 上部 -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>タスク一覧</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item active">タスク一覧</li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>
<!-- テーブル -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <!-- /.card-header -->
          <div class="card-body">
            <table id="tasks_example" class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th width="50%">名前</th>
                  <th width="20%">ステータス</th>
                  <th width="40%">
                    <%= link_to '登録', new_task_path, class:"btn btn-outline-primary btn-sm" %>
                  </th>
                </tr>
              </thead>

              <tbody>
                <% @tasks.each do |task| %>
                  <tr>
                    <td><%= task.name %></td>
                    <td><%= task.status ? "終了" : "未完"%></td>
                    <td><%= link_to '詳細', task, class:"btn btn-outline-primary btn-sm" %>
                    <%= link_to '編集', edit_task_path(task), class:"btn btn-outline-primary btn-sm" %>
                    <%= link_to '削除', task, method: :delete, class:"btn btn-outline-danger btn-sm", data: { confirm: '本当によろしいでしょうか？' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->